CC = gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME = school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re missing_header

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ)

$(OBJ): $(SRC)
	$(CC) $(CFLAGS) -c $(filter %$(basename $@).c,$(SRC)) -o $@

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

missing_header:
	@test -f m.h || (echo "Header file m.h is missing" && false)
