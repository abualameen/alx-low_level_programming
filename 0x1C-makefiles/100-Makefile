CC := gcc
SRC := main.c school.c
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re missing_header

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	@rm -f *~ $(NAME)

oclean:
	@rm -f $(NAME:.c=.o)

fclean: clean oclean
	@rm -f $(NAME)

re: fclean all

missing_header:
	@test -f m.h || (echo "Header file m.h is missing" && false)
