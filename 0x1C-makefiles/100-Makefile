CC = gcc
SRC := main.c school.c
NAME = school
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re missing_header

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) -o $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(SRC:.c=.o)

fclean: clean oclean
	@$(RM) $(NAME)

re: fclean all

missing_header:
	@test -f m.h || (echo "Header file m.h is missing" && false)
